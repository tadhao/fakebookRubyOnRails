<div id="error_explanation"> <%= devise_error_messages! %></div>


<div  style="padding-left: 120px;padding-right: 120px; text-align: center;">
<div class="panel panel-default devise-bs">
  <div class="panel-heading">
     <h4  class= "center"><%= t('.sign_in', default: 'Log in') %></h4>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), 
    html: { role: 'form' }) do |f| %>
      <div class="form-group" style="padding: 16px;" autocomplete="off">
        <div class="input-group" >

            <span class="input-group-addon">@</span>
        <%= f.email_field :email, autofocus: true, class: 'form-control', class: 'form-control',id:"exampleInputEmail3", placeholder:"Email", autocomplete: "off" %>
        </div>
      </div>
      <div class="form-group" style="padding-left: 20px;padding-right: 20px; ">
       
        <%= f.password_field :password, autocomplete: 'off', class: 'form-control', class: 'form-control',id:"exampleInputEmail3", placeholder:"Password" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="checkbox">
          <%= f.label :remember_me do %>
            <%= f.check_box :remember_me %> <%= t('.remember_me', default: 'Remember me') %>
          <% end %>
        </div>
      <% end %>
      <%= f.submit  t('.sign_in', default: 'Log in'), class: 'btn btn-primary  btn-lg btn_custom' %>
    <% end %>
  </div>
</div>
<%= render 'devise/shared/links' %>
</div>
